<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ServletNAme</servlet-name>
        <servlet-class>com.firstproject.controler.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletNAme</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletNAmeRegister</servlet-name>
        <servlet-class>com.firstproject.controler.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletNAmeRegister</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ServletNAmeChangePassword</servlet-name>
        <servlet-class>com.firstproject.controler.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletNAmeChangePassword</servlet-name>
        <url-pattern>/changepassword</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ServletNameAddBook</servlet-name>
        <servlet-class>com.firstproject.controler.AddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletNameAddBook</servlet-name>
        <url-pattern>/addbook</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ServletNameSearch</servlet-name>
        <servlet-class>com.firstproject.controler.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletNameSearch</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
</web-app>